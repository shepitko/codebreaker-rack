<div class="row">
  <div class="center col m6">
    <h1 >
    <div class='finish animated zoomInRight'>W</div>
    <div class='finish animated zoomInUp'>I</div>
    <div class='finish animated zoomInLeft'>N</div>
    <div class='finish animated zoomInDown'>!!!</div>
    </h1>
    <img src="/images/win.gif"><br/>
    <a href="/restart" class="btn">I want to play again</a>
  </div>
  <div class="col m6">
    <h4 class="center">Scores</h4>
    <table class='centered bordered '>
    <thead>
      <tr>
        <th>#</th>
        <th>Score</th>
        <th>Name</th>
        <th>use_hint</th>
        <th>Numbers of attempts</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
    <% unless scores.empty?%>
      <% scores.each_with_index do |score, index|%>
        <tr>
          <td><%=index+1%></td>
          <td><%=score[:score]%></td>
          <td><%=score[:username]%></td>
          <td><%=score[:hint] ? '+' : '-'%></td>
          <td><%=score[:cnt]%></td>
          <td><%=score[:date]%></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
  </div>
</div>